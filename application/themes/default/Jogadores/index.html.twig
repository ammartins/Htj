{% extends _layout %}

{% block content %}
  <div id="menu">
    <ul>
      <li>
        <a href="/Htj/jogadores/create">Create Players</a>
      </li>
    </ul>
  </div>
<!--pre>
{{ print_r(jogadores) }}
</pre-->
  <h4>
    Active players on the Team: <span  class='player_count'>{{ jogadores|length }}</span>
  </h4>
  {% for user in jogadores %}
    <div class="player">
      <p>
        <a href="/Htj/jogadores/view/{{ user.id }}">View Player</a>
      </p>
      <p>
      {{ user.name }}
      </p>
      <p>
      {{ user.info }}
      </p>
      {% for jogos in user.jogos %}
        <div class="jogo">
          <a href="/Htj/jogos/{{ jogos.gameId }}">Game Link</a>
          <p>Played : {{ jogos.position }} : <div class="stars{{ jogos.stars }}"></div></p>
        </div>
      {% endfor %}
    </div>
  {% endfor %}

{% endblock %}
